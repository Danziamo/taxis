<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/carContainer"
    tools:context="taxi.city.citytaxidriver.CarDetailsActivity.CarDetailsFragment">

    <!--<TextView
        style="@style/TextTitle"
        android:text="Настройки авто"
        android:id="@+id/textViewCarSettingsTitle" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutBackExitGroup"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textViewCarSettings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:id="@+id/linearLayout8">

            <Spinner
                style="@style/spinnerItemStyle"
                android:id="@+id/spinnerCarBrand"
                android:layout_marginTop="10dp" />

            <Spinner
                style="@style/spinnerItemStyle"
                android:id="@+id/spinnerCarModel" />

            <EditText
                style="@style/mediumEditText"
                android:id="@+id/spinnerCarColor"
                android:hint="Цвет"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:inputType="text" />

            <EditText
                style="@style/mediumEditText"
                android:id="@+id/editTextCarYear"
                android:hint="Год машины"
                android:imeOptions="actionNext"
                android:padding="5dp"
                android:textSize="16sp"
                android:inputType="number" />

            <EditText
                style="@style/mediumEditText"
                android:hint="Серия и номер тех паспорта"
                android:imeOptions="actionNext"
                android:id="@+id/editTextTechPassport"
                android:textSize="16sp"
                android:inputType="text" />

            <EditText
                style="@style/mediumEditText"
                android:hint="Номер автомобиля"
                android:id="@+id/editTextCarNumber"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:inputType="text" />

            <EditText
                style="@style/mediumEditText"
                android:hint="Серия и номер прав"
                android:id="@+id/editTextDriverLicenseNumber"
                android:imeOptions="actionNext"
                android:textSize="16sp"
                android:inputType="text" />

            <EditText
                style="@style/mediumEditText"
                android:hint="Серия и номер паспортных данных"
                android:id="@+id/editTextPassportNumber"
                android:imeOptions="actionDone"
                android:textSize="16sp"
                android:inputType="text" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayoutBackExitGroup">

        <Button
            style="@style/mediumButton.Yellow"
            android:text="Назад"
            android:id="@+id/buttonBack"
            android:layout_margin="10dp"/>

        <Button
            style="@style/mediumButton.Yellow"
            android:text="Сохранить"
            android:id="@+id/buttonSave"
            android:layout_margin="10dp" />

    </LinearLayout>

</RelativeLayout>
