<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="taxi.city.citytaxidriver.CarDetailsActivity.CarDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки авто"
        android:id="@+id/textViewCarSettingsTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCarSettingsTitle"
        android:layout_above="@+id/linearLayoutBackExitGroup"
        android:id="@+id/scrollView">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="420dp"
            android:layout_below="@+id/textViewCarSettings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout8">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:popupBackground="@drawable/textbox_background"
            android:id="@+id/spinnerCarBrand"
            android:textColor="@color/blacktext2"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:popupBackground="@drawable/textbox_background"
            android:id="@+id/spinnerCarModel"
            android:textColor="@color/blacktext2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/spinnerCarColor"
            android:hint="Цвет"
            android:padding="5dp"
            android:textColorHint="@color/blacktext1"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blacktext2"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/editTextCarYear"
            android:hint="Год машины"
            android:padding="5dp"
            android:textColorHint="@color/blacktext1"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blacktext2"
            android:inputType="number"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:background="@drawable/textbox_background"
            android:hint="Серия и номер тех паспорта"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextTechPassport"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blacktext2"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Номер автомобиля"
            android:padding="5dp"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextCarNumber"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blacktext2"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/textbox_background"
                android:hint="Серия"
                android:textSize="18sp"
                android:padding="5dp"
                android:gravity="center|left"
                android:textColorHint="@color/blacktext1"
                android:id="@+id/editTextDriverLicenseSeries"
                android:layout_weight="7"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/textbox_background"
                android:hint="и номер прав"
                android:padding="5dp"
                android:textColorHint="@color/blacktext1"
                android:id="@+id/editTextDriverLicenseNumber"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/blacktext2"
                android:layout_marginTop="10dp"
                android:layout_weight="2" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/textbox_background"
                android:hint="Серия"
                android:textSize="18sp"
                android:padding="5dp"
                android:gravity="center|left"
                android:textColorHint="@color/blacktext1"
                android:id="@+id/editTextPassportSeries"
                android:layout_weight="7"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/textbox_background"
                android:hint="и номер паспортных данных"
                android:padding="5dp"
                android:id="@+id/editTextPassportNumber"
                android:textColorHint="@color/blacktext1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/blacktext2"
                android:inputType="text"
                android:layout_weight="2"/>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_yellow"
            android:textColor="@color/blacktext2"
            android:text="Сохранить"
            android:id="@+id/buttonSave"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp" />
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutBackExitGroup"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_yellow"
            android:textColor="@color/blacktext2"
            android:text="Назад"
            android:id="@+id/buttonBack"
            android:layout_weight="3"
            android:layout_gravity="center|left"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_red"
            android:text="Выход"
            android:id="@+id/buttonExit"
            android:layout_gravity="center|right"
            android:layout_alignTop="@+id/buttonBack"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="3"
            android:layout_marginRight="10dp" />
    </LinearLayout>

</RelativeLayout>
