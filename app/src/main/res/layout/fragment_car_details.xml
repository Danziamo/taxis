<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="taxi.city.citytaxidriver.CarDetailsActivity.CarDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки авто"
        android:id="@+id/textViewCarSettingsTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCarSettingsTitle"
        android:layout_above="@+id/linearLayoutBackExitGroup"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/scrollView"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewCarSettings"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout8">

            <Spinner
                style="@style/spinnerItemStyle"
                android:id="@+id/spinnerCarBrand" />
            <Spinner
                style="@style/spinnerItemStyle"
                android:id="@+id/spinnerCarModel" />

            <EditText
                style="@style/mediumEditText"
                android:id="@+id/spinnerCarColor"
                android:hint="Цвет"
                android:layout_gravity="center_horizontal"
                android:inputType="text" />

            <EditText
                style="@style/mediumEditText"
                android:id="@+id/editTextCarYear"
                android:hint="Год машины"
                android:layout_gravity="center_horizontal"
                android:inputType="number" />

            <EditText
                style="@style/mediumEditText"
                android:hint="Серия и номер тех паспорта"
                android:id="@+id/editTextTechPassport"
                android:layout_gravity="center_horizontal"
                android:inputType="text" />

            <EditText
                style="@style/mediumEditText"
                android:hint="Номер автомобиля"
                android:id="@+id/editTextCarNumber"
                android:layout_gravity="center_horizontal"
                android:inputType="text" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    style="@style/SmallEditText"
                    android:hint="Серия"
                    android:id="@+id/editTextDriverLicenseSeries"
                    android:inputType="text"
                    android:layout_marginRight="10dp" />

                <EditText
                    style="@style/ShortEditText"
                    android:hint="и номер прав"
                    android:id="@+id/editTextDriverLicenseNumber"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal">

                <EditText
                    style="@style/SmallEditText"
                    android:hint="Серия"
                    android:id="@+id/editTextPassportSeries"
                    android:inputType="text"
                    android:layout_marginRight="10dp" />

                <EditText
                    style="@style/ShortEditText"
                    android:hint="и номер паспортных данных"
                    android:id="@+id/editTextPassportNumber"
                    android:inputType="text"
                    android:textSize="15dp" />
            </LinearLayout>

            <Button
                style="@style/mediumButton.Yellow"
                android:text="Сохранить"
                android:id="@+id/buttonSave"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutBackExitGroup"
        android:layout_marginBottom="5dp">

        <Button
            style="@style/mediumButton.Yellow"
            android:text="Назад"
            android:layout_marginRight="10dp"
            android:id="@+id/buttonBack"
            android:layout_gravity="center|left" />

        <Button
            style="@style/mediumButton.Red"
            android:text="Выход"
            android:id="@+id/buttonExit"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

</RelativeLayout>
