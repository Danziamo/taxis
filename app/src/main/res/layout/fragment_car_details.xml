<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="taxi.city.citytaxidriver.CarDetailsActivity.CarDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки авто"
        android:id="@+id/textViewCarSettings"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="420dp"
        android:layout_below="@+id/textViewCarSettings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:popupBackground="@drawable/textbox_background"
            android:id="@+id/spinnerCarBrand"
            android:textColor="@color/blacktext2"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:popupBackground="@drawable/textbox_background"
            android:id="@+id/spinnerCarModel"
            android:textColor="@color/blacktext2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/spinnerCarColor"
            android:hint="Цвет"
            android:textColorHint="@color/blacktext1"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blacktext2"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Серия и номер тех паспорта"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextTechPassport"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blacktext2"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Номер автомобиля"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextCarNumber"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blacktext2"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Серия и номер прав"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextDriverLicense"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blacktext2"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:text="Серия и номер паспортных данных"
            android:id="@+id/editTextPassportNumber"
            android:textColorHint="@color/blacktext1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/blacktext2"
            android:inputType="text" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_yellow"
            android:textColor="@color/blacktext2"
            android:text="Сохранить"
            android:id="@+id/buttonSave"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape_yellow"
        android:textColor="@color/blacktext2"
        android:text="Назад"
        android:id="@+id/buttonBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/button_shape_red"
        android:text="Выход"
        android:id="@+id/buttonExit"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>
