<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="taxi.city.citytaxidriver.FinishOrderDetailsActivity.FinishOrderDetailsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonMap"
        android:id="@+id/scrollViewOrderInfo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView android:text="Адрес клиента:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/textViewStartAddress"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/textbox_background"
                android:text="Адрес откуда надо забрать"
                android:textColor="@color/blacktext1"
                android:id="@+id/editTextStartAddress"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textViewStartAddress"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Начислено:"
                android:textColor="@color/translucent_lime"
                android:textSize="25sp"
                android:id="@+id/textViewCharged"
                android:layout_below="@+id/editTextStartAddress"
                android:layout_alignLeft="@+id/textViewStartAddress"
                android:layout_alignStart="@+id/textViewStartAddress"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="23dp" />

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_below="@+id/textViewCharged"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayoutWaitingTime">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ожидание:"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:20"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:id="@+id/textViewWaitingTime"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="минут"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="40dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:layout_below="@+id/linearLayoutWaitingTime"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayoutWaitingSum"
                android:layout_marginLeft="-10dp">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Сумма за ожидание:"
                    android:textSize="25sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:id="@+id/textViewWaitingSum"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="сом"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="55dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_below="@+id/linearLayoutWaitingSum"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-10dp"
                android:id="@+id/linearLayoutDistance">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Расстояние:"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:id="@+id/textViewDistance"
                    android:layout_marginLeft="35dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="км"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="57dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_below="@+id/linearLayoutDistance"
                android:layout_alignLeft="@+id/linearLayoutDistance"
                android:layout_alignStart="@+id/linearLayoutDistance"
                android:id="@+id/linearLayoutSum">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сумма:"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:id="@+id/textViewSum"
                    android:layout_marginLeft="85dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="сом"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="45dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayoutSum"
                android:weightSum="10"
                android:id="@+id/linearLayoutFixedPrice">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="8"
                    android:background="@drawable/textbox_background"
                    android:text="Фиксированная плата:"
                    android:textColor="@color/red"
                    android:id="@+id/textViewFixedPriceLabel" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="40dp"
                    android:id="@+id/textViewFixedPrice"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_below="@+id/linearLayoutFixedPrice"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:id="@+id/linearLayoutTotal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Итого:"
                    android:textSize="25sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="240"
                    android:textSize="25sp"
                    android:id="@+id/textViewTotalSum"
                    android:textColor="@color/white"
                    android:layout_marginLeft="80dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="сом"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

            <TextView
                android:text="Адрес назначения:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/textViewStopAddress"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:textAlignment="center"
                android:layout_below="@+id/linearLayoutTotal"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true" />


            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/textbox_background"
                android:text="Адрес куда надо доставить:"
                android:textColor="@color/blacktext1"
                android:id="@+id/editTextStopAddress"
                android:layout_below="@+id/textViewStopAddress"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_green"
        android:text="Ожидание"
        android:id="@+id/buttonWait"
        android:layout_above="@+id/buttonFinish"
        android:layout_alignParentLeft="true"
        android:layout_margin="5dp"
        android:layout_marginLeft="25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_green"
        android:text="На карте"
        android:id="@+id/buttonMap"
        android:layout_above="@+id/buttonFinish"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_marginRight="25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_green"
        android:text="Доставил"
        android:id="@+id/buttonFinish"
        android:layout_marginLeft="25dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
