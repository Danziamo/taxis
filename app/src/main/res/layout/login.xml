<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <!-- Login progress -->

    <ProgressBar
        android:indeterminateDrawable="@drawable/progressbar"
        android:id="@+id/login_progress"
        android:indeterminateOnly="true"
        android:animationResolution="33"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login_form">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="270dp"
            android:id="@+id/imageViewLogo"
            android:src="@drawable/logo"
            android:layout_above="@+id/login_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:minHeight="100dp"
            android:minWidth="100dp" />

        <AutoCompleteTextView
            android:id="@+id/login_phone"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="@string/prompt_phone_number"
            android:textColorHint="@color/blacktext1"
            android:background="@drawable/textbox_background"
            android:inputType="phone"
            android:singleLine="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/blacktext2"
            android:layout_above="@+id/login_password"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="@string/prompt_password"
            android:textColorHint="@color/blacktext1"
            android:gravity="center"
            android:inputType="textPassword"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/textbox_background"
            android:textColor="@color/blacktext2"
            android:layout_above="@+id/btnSignIn"
            android:layout_marginBottom="15dp" />

        <Button
            android:id="@+id/btnSignIn"
            style="?android:textAppearanceSmall"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="@string/action_sign_in"
            android:background="@drawable/button_shape_yellow"
            android:textColor="#ff1e0a8e"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="22dp"
            android:layout_above="@+id/textViewForgetPassword"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Забыли пароль?"
            android:textColor="@color/white"
            android:id="@+id/textViewForgetPassword"
            android:layout_above="@+id/btnSignUp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:textSize="25sp" />

        <Button
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Зарегистрироваться"
            android:id="@+id/btnSignUp"
            android:background="@drawable/button_shape_yellow"
            android:textColor="#ff1e0a8e"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp" />

    </RelativeLayout>

</RelativeLayout>



