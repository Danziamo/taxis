<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="taxi.city.citytaxidriver.SignUpActivity">

    <ProgressBar
        android:orientation="vertical"
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/signup_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:indeterminate="false" />

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Регистрация"
        android:id="@+id/textViewRegistration" />

    <Button
        android:layout_marginTop="59dp"
        android:layout_below="@+id/etrPassword"
        android:background="@drawable/button_shape_yellow"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Подтвердить"
        android:textColor="#040f1a"
        android:id="@+id/btnSignUp"
        android:layout_marginBottom="68dp"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:background="@drawable/textbox_background"
        android:ems="10"
        android:id="@+id/etrLastName"
        android:hint="Фамилия"
        android:textColor="#000000"
        android:textColorHint="#a1000000"
        android:layout_below="@+id/textViewRegistration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:background="@drawable/textbox_background"
        android:ems="10"
        android:id="@+id/etrFirstName"
        android:hint="Имя"
        android:textColor="#000000"
        android:textColorHint="#a1000000"
        android:layout_below="@+id/etrLastName"
        android:layout_alignLeft="@+id/etrLastName"
        android:layout_alignStart="@+id/etrLastName"
        android:layout_marginTop="20dp" />

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/textbox_background"
        android:id="@+id/etrEmail"
        android:hint="E-mail"
        android:textColor="#000000"
        android:textColorHint="#a1000000"
        android:layout_below="@+id/etrFirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="phone"
        android:background="@drawable/textbox_background"
        android:id="@+id/etrPhone"
        android:hint="Введите номер телефона"
        android:textColor="#000000"
        android:textColorHint="#a1000000"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etrEmail"
        android:layout_alignLeft="@+id/etrEmail"
        android:layout_alignStart="@+id/etrEmail" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@drawable/textbox_background"
        android:ems="10"
        android:id="@+id/etrPassword"
        android:hint="Пароль"
        android:textColor="#000000"
        android:textColorHint="#a1000000"
        android:layout_weight="9"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etrPhone"
        android:layout_alignLeft="@+id/etrPhone"
        android:layout_alignStart="@+id/etrPhone" />

    </RelativeLayout>

</RelativeLayout>
