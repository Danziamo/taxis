<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="taxi.city.citytaxidriver.SosActivityFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/linearLayout">

            <TextView
                style="@style/TextTitle"
                android:gravity="center"
                android:text="Вы использовали \nтревожную кнопку "
                android:layout_gravity="center_horizontal" />

            <TextView
                style="@style/TextTitleSOS"
                android:text="SOS"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <TextView
            style="@style/TextTitle"
            android:layout_marginTop="115dp"
            android:layout_below="@+id/linearLayout"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Даже если отмените \nвы будете видны на карте \n у других водителей \nв течении 2 мин."
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />

        <Button
            style="@style/mediumButton.Red"
            android:text="Отмена"
            android:id="@+id/buttonSos"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</RelativeLayout>
