<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutFragment"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".MapsActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        map:cameraTargetLat="42.8747"
        map:cameraTargetLng="74.6122"
        map:cameraZoom="10"
        tools:ignore="MissingPrefix">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/mainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="invisible"
                android:textColor="#000000"
                android:textSize="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llTop"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textViewDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="5dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewSpeed"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCenter"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textViewPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewTime"
                        android:layout_weight="1"
                        android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBottom"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/textViewFeePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textViewFeeTime"
                        android:layout_weight="1"
                        android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pauseText"
                android:layout_centerHorizontal="true"
                android:background="#F0FF0000"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/beginTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="НАЧАТЬ"
                android:padding="10dp"
                android:textSize="10dp"
                android:paddingRight="10dp"/>

            <Button
                android:id="@+id/pauseTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ОЖИДАНИЕ"
                android:padding="10dp"
                android:textSize="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/endTrip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/pauseTrip"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="ЗАВЕРШИТЬ"
                android:padding="10dp"
                android:textSize="10dp"
                android:enabled="false"
                android:paddingRight="10dp"/>

        </RelativeLayout>

    </fragment>

</RelativeLayout>