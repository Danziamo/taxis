<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="taxi.city.citytaxidriver.FinishOrder">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollViewFinishOrder"
        android:layout_centerInParent="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Адрес клиента:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:id="@+id/textViewClientAddressLabel"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/text_size_large"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:background="@drawable/textbox_background"
                android:text="Адрес откуда надо забрать"
                android:hint="Адрес откуда надо забрать"
                android:textColorHint="@color/blacktext1"
                android:textColor="@color/blacktext1"
                android:textSize="@dimen/text_size"
                android:id="@+id/textViewStartAddress"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textViewClientAddressLabel"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Телефон клиента:"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:id="@+id/textViewClientPhoneLabel"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_below="@+id/textViewStartAddress"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/textbox_background"
                android:text="Телефон"
                android:hint="Телефон"
                android:textSize="@dimen/text_size"
                android:textColorHint="@color/blacktext1"
                android:gravity="center"
                android:id="@+id/textViewClientPhone"
                android:layout_below="@+id/textViewClientPhoneLabel"
                android:layout_alignLeft="@+id/textViewStartAddress"
                android:layout_alignStart="@+id/textViewStartAddress"
                android:layout_marginTop="15dp"
                android:textColor="@color/blacktext1"
                android:layout_margin="10dp" />


                    </LinearLayout>

    </ScrollView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"></TableRow>


</RelativeLayout>
