<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="taxi.city.citytaxidriver.UserDetailsActivity.UserDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки водителя"
        android:textColor="@color/white"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Фамилия"
            android:id="@+id/editTextLastName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/blacktext2"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Имя"
            android:id="@+id/editTextFirstName"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/blacktext2"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Телефон"
            android:id="@+id/editTextPhone"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:textSize="20sp"
            android:textColor="@color/blacktext2"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:text="Пароль"
            android:id="@+id/editTextPassword"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/blacktext2"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Сохранить"
            android:background="@drawable/button_shape_yellow"
            android:textColor="@color/blacktext2"
            android:id="@+id/buttonSave"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Назад"
        android:textColor="@color/blacktext2"
        android:background="@drawable/button_shape_yellow"
        android:id="@+id/buttonBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Выход"
        android:background="@drawable/button_shape_red"
        android:id="@+id/buttonExit"
        android:layout_alignTop="@+id/buttonBack"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />
</RelativeLayout>
