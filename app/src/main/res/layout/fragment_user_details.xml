<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_background"
    tools:context="taxi.city.citytaxidriver.UserDetailsActivity.UserDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки водителя"
        android:textColor="@color/white"
        android:id="@+id/textViewTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Фамилия"
            android:padding="5dp"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextLastName"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/blacktext2"
            android:inputType="text"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Имя"
            android:padding="5dp"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextFirstName"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/blacktext2"
            android:inputType="text"
            android:layout_margin="10dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="e-mail"
            android:padding="5dp"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextEmail"
            android:inputType="textEmailAddress"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/blacktext2"
            android:layout_margin="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="6"
                android:hint="+996"
                android:text="+996"
                android:background="@drawable/textbox_background"
                android:padding="5dp"
                android:textColorHint="@color/blacktext1"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/textViewExtra"
                android:textSize="20sp"
                android:inputType="phone"
                android:textColor="@color/blacktext2"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/textbox_background"
                android:layout_weight="2"
                android:hint="Телефон"
                android:padding="5dp"
                android:textColorHint="@color/blacktext1"
                android:id="@+id/textViewPhone"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:textSize="20sp"
                android:textColor="@color/blacktext2"/>
        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:hint="Пароль"
            android:padding="5dp"
            android:textColorHint="@color/blacktext1"
            android:id="@+id/editTextPassword"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/blacktext2"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Сохранить"
            android:visibility="visible"
            android:background="@drawable/button_shape_yellow"
            android:textColor="@color/blacktext2"
            android:id="@+id/buttonSave"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayoutBackExitGroup"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Назад"
            android:textColor="@color/blacktext2"
            android:background="@drawable/button_shape_yellow"
            android:id="@+id/buttonBack"
            android:layout_weight="2.5"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="Выход"
            android:background="@drawable/button_shape_red"
            android:id="@+id/buttonExit"
            android:layout_weight="2.5"
            android:layout_margin="10dp" />
    </LinearLayout>

</RelativeLayout>
