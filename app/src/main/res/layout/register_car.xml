<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="taxi.city.citytaxidriver.CreateCarActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:id="@+id/progressBarCreateCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:indeterminate="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Регистрация авто"
            android:id="@+id/textViewCarRegistration" />

        <Button
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:textColor="#202930"
            android:text="Сохранить"
            android:id="@+id/btnSaveCar"
            android:background="@drawable/button_shape_yellow"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <Spinner
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/spinnerCarBrandModel"
            android:spinnerMode="dialog"
            android:layout_below="@+id/spinnerCarBrand"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/spinnerCarBrand"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textViewCarRegistration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/etCarColor"
            android:hint="Цвет автомобиля"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/spinnerCarBrandModel"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/etTechPassport"
            android:hint="Тех. паспорт"
            android:layout_below="@+id/etCarColor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/etCarNumber"
            android:hint="Номер автомобиля"
            android:layout_below="@+id/etTechPassport"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/etNumberOfLicense"
            android:hint="Номер и серия прав"
            android:layout_below="@+id/etCarNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/etPassportId"
            android:hint="Пасспортные данные"
            android:layout_below="@+id/etNumberOfLicense"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/textbox_background"
            android:id="@+id/etCarYear"
            android:hint="Год машины"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etPassportId"
            android:layout_alignParentTop="false"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</RelativeLayout>