<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayoutFragment"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"

    tools:context=".MapsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Фиксированная плата 100 сом"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/red"
            android:background="@drawable/textbox_background"
            android:id="@+id/textView16"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="120dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_green"
            android:text="Ожидание"
            android:textColor="@color/blacktext2"
            android:id="@+id/button"
            android:layout_marginLeft="33dp"
            android:layout_above="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="33dp"
            android:layout_marginBottom="19dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_green"
            android:text="На месте"
            android:textColor="@color/blacktext2"
            android:id="@+id/button2"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/button" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_green"
            android:text="Доп. инфо"
            android:textColor="@color/blacktext2"
            android:id="@+id/button3"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="50dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape_black"
            android:text="Настройки"
            android:textColor="@color/white"
            android:id="@+id/button4"
            android:layout_alignBottom="@+id/button2"
            android:layout_alignRight="@+id/button3"
            android:layout_alignEnd="@+id/button3" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#7000"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начислено:"
            android:textColor="@color/blacktext2"
            android:textSize="25sp"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ожидание:"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textView3"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="00:00"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textViewWaitTime"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мин"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textView5"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумма:"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textView6"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0000"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textViewWaitSum"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="сом"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textView9"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Расстояние:"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textView10"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00000"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textViewDistance"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="км"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textView12"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумма проезда:"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textView13"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000000"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textViewSum"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="сом"
                android:textColor="@color/blacktext2"
                android:textSize="20sp"
                android:id="@+id/textView15"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>