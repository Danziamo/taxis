<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    tools:context="taxi.city.citytaxidriver.OrderActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/main_background"
        android:scaleType="centerCrop"/>

    <ListView
        android:id="@+id/orderList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayoutButtonGroupOrder"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:scrollbarStyle="outsideInset">
    </ListView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:weightSum="10"
        android:id="@+id/linearLayoutButtonGroupOrder"
        android:layout_marginTop="5dp">

        <Button
            style="@style/mediumButton.Yellow"
            android:text="Карта"
            android:textColor="@color/blacktext2"
            android:id="@+id/buttonMap"
            android:layout_marginTop="10dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_refresh"
            android:id="@+id/buttonRefresh"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" />

        <Button
            style="@style/mediumButton.Yellow"
            android:text="Ещё заказы"
            android:id="@+id/buttonMoreOrder"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp" />
    </LinearLayout>
</RelativeLayout>
