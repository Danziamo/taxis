<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="taxi.city.citytaxidriver.SignUpActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:id="@+id/signup_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:indeterminate="false" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svSignUp"
        android:fillViewport="false">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llSignUpForm">

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnShowPassword"
                    android:layout_weight="1" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

    <Button
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Подтвердить"
        android:textColor="#040f1a"
        android:background="@drawable/button_shape_yellow"
        android:id="@+id/btnSignUp"
        android:layout_marginBottom="68dp"
        android:layout_alignBottom="@+id/svSignUp"
        android:layout_centerHorizontal="true" />

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:background="@drawable/ordertext"
        android:ems="10"
        android:id="@+id/etrLastName"
        android:hint="Фамилия"
        android:layout_below="@+id/signup_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:background="@drawable/ordertext"
        android:ems="10"
        android:id="@+id/etrFirstName"
        android:hint="Имя"
        android:layout_below="@+id/etrLastName"
        android:layout_alignLeft="@+id/etrLastName"
        android:layout_alignStart="@+id/etrLastName"
        android:layout_marginTop="20dp" />

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/ordertext"
        android:id="@+id/etrEmail"
        android:hint="E-mail"
        android:layout_below="@+id/etrFirstName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <AutoCompleteTextView
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="phone"
        android:background="@drawable/ordertext"
        android:id="@+id/etrPhone"
        android:hint="Введите номер телефона"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etrEmail"
        android:layout_alignLeft="@+id/etrEmail"
        android:layout_alignStart="@+id/etrEmail" />

    <EditText
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:background="@drawable/ordertext"
        android:ems="10"
        android:id="@+id/editText"
        android:hint="Пароль"
        android:layout_weight="9"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/etrPhone"
        android:layout_alignLeft="@+id/etrPhone"
        android:layout_alignStart="@+id/etrPhone" />

</RelativeLayout>
