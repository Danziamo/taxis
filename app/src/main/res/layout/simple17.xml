<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="taxi.city.citytaxidriver.FinishOrder">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewFinishOrder"
        android:layout_centerInParent="true">

    </ScrollView>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <TextView android:text="Адрес клиента:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/textViewClientAddressLabel"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <android.inputmethodservice.ExtractEditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/textbox_background"
            android:text="Адрес откуда надо забрать"
            android:textColor="@color/blacktext1"
            android:id="@+id/textViewStartAddress"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/textViewClientAddressLabel"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Начислено:"
            android:textColor="@color/translucent_lime"
            android:textSize="25sp"
            android:id="@+id/credited_with"
            android:layout_below="@+id/textViewStartAddress"
            android:layout_alignLeft="@+id/textViewClientAddressLabel"
            android:layout_alignStart="@+id/textViewClientAddressLabel"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="23dp" />

        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@+id/credited_with"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ожидание:"
                android:textSize="25sp"
                android:id="@+id/expectation" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:20"
                android:textSize="25sp"
                android:id="@+id/nur1"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="минут"
                android:textSize="20sp"
                android:id="@+id/min"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2"
            android:layout_marginLeft="-10dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Сумма за ожидание:"
                android:textSize="25sp"
                android:id="@+id/sum" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textSize="25sp"
                android:id="@+id/nur2"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="сом"
                android:textSize="20sp"
                android:id="@+id/currency"
                android:layout_marginLeft="55dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-10dp"
            android:id="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Расстояние:"
                android:textSize="25sp"
                android:id="@+id/tvDistance" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="25sp"
                android:id="@+id/nur3"
                android:layout_marginLeft="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="км"
                android:textSize="20sp"
                android:id="@+id/textView8"
                android:layout_marginLeft="57dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3"
            android:id="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сумма:"
                android:textSize="25sp"
                android:id="@+id/sum2"
                android:layout_marginLeft="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textSize="25sp"
                android:id="@+id/nur4"
                android:layout_marginLeft="85dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="сом"
                android:textSize="20sp"
                android:id="@+id/currency1"
                android:layout_marginLeft="45dp" />
        </LinearLayout>

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/textbox_background"
            android:text="Фиксированная плата:"
            android:textColor="@color/red"
            android:id="@+id/editText2"
            android:layout_below="@+id/linearLayout4"
            android:layout_alignLeft="@+id/textViewStartAddress"
            android:layout_alignStart="@+id/textViewStartAddress" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/editText2"
            android:layout_alignLeft="@+id/linearLayout3"
            android:layout_alignStart="@+id/linearLayout3"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:id="@+id/linearLayout5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Итого:"
                android:textSize="25sp"
                android:id="@+id/tvTotalPrice" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="240"
                android:textSize="25sp"
                android:id="@+id/nur5"
                android:layout_marginLeft="80dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="сом"
                android:textSize="25sp"
                android:id="@+id/currency2"
                android:layout_marginLeft="50dp" />
        </LinearLayout>

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/textbox_background"
            android:text="Адрес куда надо доставить:"
            android:textColor="@color/blacktext1"
            android:id="@+id/textView25"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignLeft="@+id/editText2"
            android:layout_alignStart="@+id/editText2"
            android:layout_marginTop="5dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_green"
            android:text="Ожидание"
            android:id="@+id/button7"
            android:layout_below="@+id/textView25"
            android:layout_alignLeft="@+id/linearLayout4"
            android:layout_alignStart="@+id/linearLayout4"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_green"
            android:text="На карте"
            android:id="@+id/button8"
            android:layout_alignTop="@+id/button7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_green"
            android:text="Доставил"
            android:id="@+id/button9"
            android:layout_below="@+id/button7"
            android:layout_alignLeft="@+id/button7"
            android:layout_alignStart="@+id/button7"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

</RelativeLayout>
