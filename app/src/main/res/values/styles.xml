<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="GoogleMapsTheme" parent="Theme.AppCompat.Light">
        <item name="android:logo">@mipmap/ic_launcher</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:background">@drawable/main_background</item>-->
        <item name="android:textColor">@color/blacktext2</item>
        <!--<item name="android:inputType">text</item>-->
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="DialogBoxTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/blacktext2</item>

    </style>

    <style name="progressbar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbar</item>
    </style>

</resources>
