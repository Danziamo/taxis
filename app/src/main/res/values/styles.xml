<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="GoogleMapsTheme" parent="Theme.AppCompat.Light">
        <item name="android:logo">@mipmap/ic_launcher</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/blacktext2</item>
    </style>

    <style name="DialogBoxTheme" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/blacktext2</item>

    </style>

    <style name="progressbar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progressbar</item>
    </style>
    
    <!--Buttons-->
    <style name="mediumButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mediumButton.Green" parent="@style/mediumButton">
        <item name="android:background">@drawable/button_shape_azure</item>
    </style>

    <style name="mediumButton.Yellow" parent="@style/mediumButton">
        <item name="android:background">@drawable/button_shape_yellow</item>
        <item name="android:textColor">@color/blacktext2</item>
    </style>

    <style name="mediumButton.Black" parent="@style/mediumButton">
        <item name="android:background">@drawable/button_shape_dark_blue</item>
    </style>

    <style name="mediumButton.Red" parent="@style/mediumButton">
        <item name="android:background">@drawable/button_shape_red</item>
    </style>

    <!--EditText-->
    <style name="mediumEditText" parent="@style/MainTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/blacktext1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <!--SmallEditText-->
    <style name="SmallEditText" parent="@style/MainTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:textColorHint">@color/blacktext1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">7</item>
    </style>

    <!--ShortEditTex-->
    <style name="ShortEditText" parent="@style/MainTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:textColorHint">@color/blacktext1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--SpinnerStyle-->
    <style name="spinnerItemStyle">
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:popupBackground">@drawable/textbox_background</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <!--FixedEditText-->
    <style name="FixedEditText" parent="@style/MainTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">7</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">5dp</item>
    </style>
    <!--SmalltFixedEditText-->
    <style name="SmallFixedEditText" parent="@style/MainTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center|right</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
