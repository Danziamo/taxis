<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="GoogleMapsTheme" parent="Theme.AppCompat.Light">
        <item name="android:logo">@mipmap/ic_launcher</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/blacktext2</item>
    </style>

    <style name="ActionBarTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:logo">@mipmap/ic_launcher</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <item name="android:popupMenuStyle">@style/MyActionBar.PopupMenu</item>
    </style>

    <style name="MyActionBarTabs" parent="ActionBarTheme">
        <!-- tab indicator -->
        <item name="android:backgroundStacked">#a0999999</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/blacktext2</item>
    </style>

    <style name="MyActionBar.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/blacktext2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogBoxTheme" parent="Base.Theme.AppCompat.Light.Dialog.FixedSize">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/blacktext2</item>

    </style>

    
    <!--Buttons-->
    <style name="mediumButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mediumButton.Blue" parent="@style/mediumButton">
        <item name="android:background">@drawable/button_shape_azure</item>
    </style>

    <style name="mediumButton.Yellow" parent="@style/mediumButton">
        <item name="android:background">@drawable/button_shape_yellow</item>
        <item name="android:textColor">@color/blacktext2</item>
    </style>

    <style name="mediumButton.Black" parent="@style/mediumButton">
        <item name="android:background">@drawable/button_shape_dark_blue</item>
    </style>

    <style name="mediumButton.Red" parent="@style/mediumButton">
        <item name="android:background">@drawable/button_shape_red</item>
    </style>

    <!--MediumEditText-->
    <style name="mediumEditText" parent="@style/MainTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <!--<item name="android:gravity">center</item>-->
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/blacktext1</item>
        <item name="android:padding">5dp</item>



    </style>

    <!--SmallEditText-->
    <style name="SmallEditText" parent="@style/MainTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center|left</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginRight">@dimen/spacing_tiny</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:textColorHint">@color/blacktext1</item>
        <!--<item name="android:layout_marginTop">@dimen/spacing_huge</item>-->

        <item name="android:padding">5dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_weight">7</item>
    </style>

    <!--ShortEditTex-->
    <style name="ShortEditText" parent="@style/MainTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <!--<item name="android:layout_marginTop">@dimen/spacing_huge</item>-->
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:textColorHint">@color/blacktext1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--SpinnerStyle-->
    <style name="spinnerItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:popupBackground">@drawable/textbox_background</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <!--FixedEditText-->
    <style name="FixedEditText" parent="@style/MainTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center|left</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:padding">5dp</item>
    </style>
    <!--SmalltFixedEditText-->
    <style name="SmallFixedEditText" parent="@style/MainTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <item name="android:layout_weight">7</item>
        <item name="android:gravity">center|right</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:padding">5dp</item>
    </style>


    <!--TextTitle-->

    <style name="TextTitle" parent="@style/MainTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/font_huge</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>
    </style>

    <style name="TextTitleSOS" parent="@style/MainTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/font_sos</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>
    </style>

    <style name="TextSubTitle" parent="@style/TextTitle">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

</resources>
