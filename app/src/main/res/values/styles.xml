<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/white</item>
    </style>

    <!--SpinnerStyle-->
    <style name="spinnerItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">@dimen/spacing_large</item>
        <item name="android:layout_marginRight">@dimen/spacing_large</item>
        <item name="android:layout_marginTop">@dimen/spacing_tiny</item>
        <item name="android:background">@drawable/textbox_background</item>
        <item name="android:popupBackground">@drawable/textbox_background</item>
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="CounterTextView">
        <item name="android:textColor">@color/blacktext2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">@drawable/splash_background</item>
    </style>

</resources>
